{
  "files": [],
  "exclude": ["src/"],
  "references": [{ "path": "./server/" }, { "path": "./types/" }],
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "./server/*": ["./server/*"],
      "./types/*": ["./types/*"]
    },
    "rootDir": "./",
    "rootDirs": ["./server/", "./types/"],
    "outDir": "./dist-tsc/js/",
    "declarationDir": "./dist-tsc/dts/",

    "composite": true,
    "incremental": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "target": "ESNext",
    "module": "CommonJS",
    "strict": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "removeComments": true,
    "newLine": "lf",
    "forceConsistentCasingInFileNames": true
  }
}
