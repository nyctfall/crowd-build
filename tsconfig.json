{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "removeComments": true,
    "strict": true,
    "alwaysStrict": true,
    "target": "ESNext",
    "skipLibCheck": true,
    "newLine": "lf",
    "moduleResolution": "Node",
    "forceConsistentCasingInFileNames": true,
    // used for pnpm install pkgs:
    "preserveSymlinks": true,
    // used for vitest typings:
    "types": ["vitest/globals"],
  }
}